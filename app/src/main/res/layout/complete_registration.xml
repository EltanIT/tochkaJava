<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/complete_registration_style"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отлично!"
            android:textColor="@color/main_green_color"
            android:textSize="22sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация завершена!"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="2dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подтвердите адрес электронной почты ******@gmail.com"
            android:textColor="@color/grey"
            android:textSize="8sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            />

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Хорошо"
                android:textColor="@color/white"
                android:backgroundTint="@color/main_green_color"
                />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>