<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.SignUpAdminConfirmScreen">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_back"
        android:backgroundTint="@color/transparent_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:onClick="back_to_signup_screen"
        app:layout_goneMarginStart="8dp"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите код администратора"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp"
        android:textAlignment="center"
        android:padding="50dp"
        />
    <EditText
        android:id="@+id/code_admin_et"
        android:layout_width="220dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:background="@drawable/width_model_style"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Код выдается другим администратором для подтверждения регистрации"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/code_admin_et"
        android:layout_marginTop="96dp"
        android:textAlignment="center"
        android:padding="50dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="16dp"
        android:text="Продолжить"
        android:textSize="15sp"
        android:textColor="@color/main_green_color"
        android:background="@drawable/round_white_button_with_green_width_style"
        android:onClick="btn_continue"
        />

</androidx.constraintlayout.widget.ConstraintLayout>