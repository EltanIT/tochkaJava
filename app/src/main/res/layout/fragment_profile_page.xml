<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".personal_account.fragment_profile_page">

    <LinearLayout
        android:id="@+id/name_surname_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:id="@+id/name_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"

            />
        <TextView
            android:id="@+id/surname_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/name_user_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/about_me_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_surname_ll"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        >
        <ImageView
            android:id="@+id/about_me_icon_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/about_me_icon"
            android:scaleType="fitXY"

            />
        <TextView
            android:id="@+id/about_me_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обо мне"
            android:textStyle="bold"
            android:textColor="@color/main_green_color"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/information_about_user_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_me_ll"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|center_horizontal"


        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/main_green_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подписки"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/main_green_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подписчики"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="16sp"
                    android:textColor="@color/main_green_color"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star_profile_icon"
                    android:layout_marginStart="3dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подписчики"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/hobby_add_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/information_about_user_ll"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мои увлечения"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/addr_profile_icon"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить"
                android:textColor="@color/grey_text"


                />
            
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/edits_text_flow"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hobby_add_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:constraint_referenced_ids="study_btn,sport_btn,lean_lenguage_btn,buisnes_btn,communicate_btn,self_development_btn"
        android:layout_marginTop="24dp"
        app:flow_wrapMode="chain"
        app:flow_verticalGap="18dp"
        app:flow_horizontalGap="10dp"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/study_btn"
        android:layout_width="wrap_content"
        android:minWidth="160dp"
        android:maxWidth="160dp"
        android:layout_height="35dp"
        android:background="@drawable/sign_up_user_hobby_two_button_hobby_style"
        android:text="Учеба"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpure"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sport_btn"
        android:layout_width="wrap_content"
        android:minWidth="160dp"
        android:maxWidth="160dp"
        android:layout_height="35dp"
        android:background="@drawable/sign_up_user_hobby_two_button_hobby_style"
        android:text="Спорт"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lean_lenguage_btn"
        android:layout_width="wrap_content"
        android:minWidth="160dp"
        android:maxWidth="160dp"
        android:layout_height="35dp"
        android:background="@drawable/sign_up_user_hobby_two_button_hobby_style"
        android:text="Изучить язык"
        android:textColor="@color/white"
        android:backgroundTint="@color/lilac_color"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buisnes_btn"
        android:layout_width="wrap_content"
        android:minWidth="160dp"
        android:maxWidth="160dp"
        android:layout_height="35dp"
        android:background="@drawable/sign_up_user_hobby_two_button_hobby_style"
        android:text="Бизнесс"
        android:textColor="@color/white"
        android:backgroundTint="@color/pink"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/communicate_btn"
        android:layout_width="wrap_content"
        android:minWidth="160dp"
        android:maxWidth="160dp"
        android:layout_height="35dp"
        android:background="@drawable/sign_up_user_hobby_two_button_hobby_style"
        android:text="Общение"
        android:textColor="@color/white"
        android:backgroundTint="@color/mint_color"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/self_development_btn"
        android:layout_width="wrap_content"
        android:minWidth="160dp"
        android:maxWidth="160dp"
        android:layout_height="35dp"
        android:background="@drawable/sign_up_user_hobby_two_button_hobby_style"
        android:text="Саморазвитие"
        android:textColor="@color/white"
        android:backgroundTint="@color/coral_color"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мои группы"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/edits_text_flow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="20dp"
        />
    <ScrollView
        android:id="@+id/your_groups_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:layout_marginTop="24dp"
        android:orientation="vertical"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/your_groups_rv"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/home_screen_your_groups_lv_item_model"/>
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>