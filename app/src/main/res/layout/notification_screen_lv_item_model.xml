<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/count_time_start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                app:layout_constraintEnd_toStartOf="@id/type_time_start_tv"
                app:layout_constraintTop_toTopOf="@id/type_time_start_tv"
                android:layout_marginEnd="3dp"
                />
            <TextView
                android:id="@+id/type_time_start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="минут"
                app:layout_constraintEnd_toStartOf="@id/ago_text_tv"
                app:layout_constraintTop_toTopOf="@id/ago_text_tv"
                android:layout_marginEnd="3dp"
                />
            <TextView
                android:id="@+id/ago_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="назад"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/image_event_cv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="30dp"
                >
            <ImageView
                android:id="@+id/image_event_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_tochka_enter_screen"
                />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name_event_notification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/main_green_color"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/image_event_cv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="@id/image_event_cv"
                android:layout_marginStart="15dp"

                />
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мероприятие "
                android:textColor="@color/grey_text"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/image_event_cv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@id/name_event_notification_tv"
                android:layout_marginStart="15dp"

                />
            <TextView
                android:id="@+id/name_event_notification_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/text1"
                app:layout_constraintTop_toTopOf="@id/text1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"

                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" началось!"
                android:textColor="@color/grey_text"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/name_event_notification_tv2"
                app:layout_constraintTop_toTopOf="@id/text1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>