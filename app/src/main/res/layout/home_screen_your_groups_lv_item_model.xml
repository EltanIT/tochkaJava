<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_screen_model_style"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/your_group_cv"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            app:cardCornerRadius="100dp"
            android:background="@color/grey"
            >
            <ImageView
                android:id="@+id/your_group_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_tochka_enter_screen"
                android:scaleType="fitXY"

                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/name_your_group_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name group"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/your_group_cv"
            app:layout_constraintTop_toTopOf="@id/your_group_cv"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:id="@+id/count_participant_your_group_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="@color/grey_text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/name_your_group_tv"
            app:layout_constraintStart_toEndOf="@id/your_group_cv"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:id="@+id/participant_group_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="участников"
            android:textSize="16sp"
            android:textColor="@color/grey_text"
            app:layout_constraintTop_toBottomOf="@id/name_your_group_tv"
            app:layout_constraintStart_toEndOf="@id/count_participant_your_group_tv"
            android:layout_marginStart="16dp"
            />
        <ImageView
            android:id="@+id/image_your_group_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_button_back"
            android:backgroundTint="@color/transparent_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:rotationY="180"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>